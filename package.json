{
  "name": "surfnetsys",
  "version": "1.1.0",
  "description": "幻影在线网络管理系统 - 网吧计费和管理系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "launch": "electron launcher.js",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "rebuild": "electron-rebuild -v 29.1.0"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^5.4.3",
    "express": "^4.18.2",
    "node-addon-api": "^8.5.0",
    "regedit": "^5.1.4",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.surfnetsys.app",
    "productName": "幻影在线",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "网吧管理",
    "计费系统",
    "网络管理",
    "electron"
  ],
  "author": "幻影在线团队",
  "license": "MIT"
}
